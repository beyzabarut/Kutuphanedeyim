<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@drawable/gebackground"
    tools:context="com.example.zeynep.kutuphanedeyimm.MainActivity">


   <ImageView
        android:id="@+id/imageView"
       android:verticalScrollbarPosition="defaultPosition"
        android:layout_width="400dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/gelogo"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp" />

    <Button
        android:layout_width="240dp"
        android:layout_height="45dp"
          android:background="@drawable/geogrenci"
        android:id="@+id/ogrencigirisi"

        android:layout_above="@+id/kutuphanegiris"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />

    <Button
        android:id="@+id/kutuphanegiris"
        android:layout_width="240dp"
        android:layout_height="45dp"
       android:layout_marginTop="-6dp"
    android:background="@drawable/gelibrary"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ogrencigirisi" />





</RelativeLayout>
